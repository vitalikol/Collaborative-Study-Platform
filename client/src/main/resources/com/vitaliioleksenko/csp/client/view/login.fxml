<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.RowConstraints?>
<VBox xmlns="http://javafx.com/javafx/11.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      alignment="CENTER"
      spacing="20.0"
      style="-fx-background-color: #f5f5f5;"
      fx:controller="com.vitaliioleksenko.csp.client.controller.LoginController">

    <padding>
        <Insets top="50.0" right="50.0" bottom="50.0" left="50.0"/>
    </padding>

    <!-- Заголовок -->
    <Label text="Вхід в систему"
           style="-fx-text-fill: #2c3e50;">
        <font>
            <Font name="System Bold" size="24.0"/>
        </font>
    </Label>

    <!-- Форма логіну -->
    <GridPane hgap="10.0" vgap="15.0">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="200.0"/>
        </columnConstraints>

        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        </rowConstraints>

        <!-- Логін -->
        <Label text="Логін:"
               GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <TextField fx:id="usernameField"
                   promptText="Введіть логін"
                   GridPane.columnIndex="1" GridPane.rowIndex="0"/>

        <!-- Пароль -->
        <Label text="Пароль:"
               GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <PasswordField fx:id="passwordField"
                       promptText="Введіть пароль"
                       GridPane.columnIndex="1" GridPane.rowIndex="1"/>
    </GridPane>

    <!-- Кнопки -->
    <HBox spacing="20.0" alignment="CENTER">
        <Button fx:id="loginButton"
                text="Увійти"
                defaultButton="true"
                style="-fx-background-color: #3498db; -fx-text-fill: white;"
                onAction="#handleLogin"/>

        <Button fx:id="cancelButton"
                text="Скасувати"
                cancelButton="true"
                style="-fx-background-color: #95a5a6; -fx-text-fill: white;"
                onAction="#handleCancel"/>
    </HBox>

    <!-- Повідомлення про помилку -->
    <Label fx:id="errorLabel"
           style="-fx-text-fill: #e74c3c; -fx-font-size: 12px;"
           visible="false"/>
</VBox>
