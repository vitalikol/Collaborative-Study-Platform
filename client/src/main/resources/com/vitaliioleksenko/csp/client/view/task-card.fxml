<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane
        prefWidth="400.0"
        style="-fx-background-color: #FFFFFF; -fx-background-radius: 8; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 1);"
        xmlns="http://javafx.com/javafx/21"
        xmlns:fx="http://javafx.com/fxml/1"
        fx:controller="com.vitaliioleksenko.csp.client.controller.TaskCardController">
    <children>

        <VBox
                spacing="5.0"
                AnchorPane.bottomAnchor="10.0"
                AnchorPane.leftAnchor="15.0"
                AnchorPane.rightAnchor="100.0"
                AnchorPane.topAnchor="10.0">
            <children>
                <Label fx:id="taskTitleLabel" text="Назва Завдання (Task)">
                    <font>
                        <Font name="System Bold" size="16.0" />
                    </font>
                </Label>
                <Label fx:id="groupNameLabel" text="Назва групи" textFill="#555555">
                    <font>
                        <Font name="System Italic" size="12.0" />
                    </font>
                </Label>
                <Label fx:id="descriptionLabel"
                       text="Короткий опис завдання буде тут, і він має автоматично переносити текст, якщо той не вміщається..."
                       textFill="#333333"
                       wrapText="true" />
            </children>
        </VBox>

        <Label fx:id="dateLabel" text="Date" textFill="#888888" AnchorPane.rightAnchor="15.0" AnchorPane.topAnchor="10.0" />

        <Label fx:id="statusLabel" text="Status" textFill="#007BFF" AnchorPane.bottomAnchor="10.0" AnchorPane.rightAnchor="15.0">
            <font>
                <Font name="System Bold" size="12.0" />
            </font>
        </Label>
    </children>
    <padding>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
    </padding>
</AnchorPane>